    <script src="https://www.paypal.com/sdk/js?client-id=ARZ5Q1k8dAVfc_J96CCVUCL-WpMXLldOdAtqZGKMMZjQ-NJkKZtXyIoeg4A-ocR2OZ9Dz-bVzDSrakgA&currency=USD" data-sdk-integration-source="button-factory"></script>
    <script>
        function initPayPalButton() {
            paypal.Buttons({
                style: {
                    shape: 'rect',
                    color: 'gold',
                    layout: 'vertical',
                    label: 'paypal',

                },

                createOrder: function(data, actions) {
                    alert(totalcost)
                    return actions.order.create({
                        purchase_units: [{
                            "description": "Golf Tournament",
                            "amount": {
                                "currency_code": "USD",
                                "value": totalcost
                            }
                        }]
                    });
                },

                onApprove: function(data, actions) {
                    return actions.order.capture().then(function(details) {
                        alert('Transaction completed by ' + details.payer.name.given_name + '!');
                    });
                },

                onError: function(err) {
                    console.log(err);
                }
            }).render('#paypal-button-container');
        }
        initPayPalButton();
    </script>



