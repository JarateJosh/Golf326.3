        <script>
            var totalcost = 0.00;
            var myCost = 0.00;
            var pentry = "";
            var mullcost = 0.00;
            var paypalcost = 0.00;
            var curmullcost = 0.00;
            var p1added = false;
            var p2added = false;
            var p3added = false;
            var p4added = false;

            /* function addplayer() {
                alert("adding player")
                if (pentry === "") {
                    alert("player added");
                    (document.getElementById("p1entry").value.length != 0)
                    totalcost = totalcost + 100.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                    p1added = true
                }
            } */

            function mulligans() {
                mullcost = 0.00;
                totalcost = totalcost - curmullcost;
                if (document.getElementById('mullzero').checked) {
                    mullcost = 0.00;
                } else if (document.getElementById('mullone').checked) {
                    mullcost = 20.00;
                } else if (document.getElementById('mulltwo').checked) {
                    mullcost = 40.00;
                } else if (document.getElementById('mullthree').checked) {
                    mullcost = 60.00;
                } else if (document.getElementById('mullfour').checked) {
                    mullcost = 80.00;
                }
                curmullcost = mullcost;
                totalcost = totalcost + mullcost;
                document.getElementById("myCost").innerHTML = totalcost;
            }

            function gold() {
                if (goldsponsor.checked == true) {
                    textgold.style.display = "block";
                    textgold.style.color = "red";
                    totalcost = totalcost + 2500.00;
                    document.getElementById("myCost").innerHTML = totalcost;

                } else {
                    textgold.style.display = "none";
                    totalcost = totalcost - 2500.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                }
            }

            function silver() {
                if (silversponsor.checked == true) {
                    textsilver.style.display = "block";
                    textsilver.style.color = "red";
                    totalcost = totalcost + 2000.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                } else {
                    textsilver.style.display = "none";
                    totalcost = totalcost - 2000.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                }
            }

            function bronze() {
                if (bronzesponsor.checked == true) {
                    textbronze.style.display = "block";
                    textbronze.style.color = "red";
                    totalcost = totalcost + 1500.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                } else {
                    textbronze.style.display = "none";
                    totalcost = totalcost - 1500.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                }
            }

            function ace() {
                if (holeinone.checked == true) {
                    textace.style.display = "block";
                    textace.style.color = "red";
                    totalcost = totalcost + 1000.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                } else {
                    textace.style.display = "none";
                    totalcost = totalcost - 1000.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                }
            }

            function lunch() {
                if (lunchsponsor.checked == true) {
                    textlunch.style.display = "block";
                    textlunch.style.color = "red";
                    totalcost = totalcost + 750.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                } else {
                    textlunch.style.display = "none";
                    totalcost = totalcost - 750.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                }
            }

            function closest1() {
                if (closesttopin.checked == true) {
                    textclosest.style.display = "block";
                    textclosest.style.color = "red";
                    totalcost = totalcost + 500.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                } else {
                    textclosest.style.display = "none";
                    totalcost = totalcost - 500.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                }
            }

            function longest() {
                if (longestdrive.checked == true) {
                    textlongest.style.display = "block";
                    textlongest.style.color = "red";
                    text = "Longest Drive Sponsor Selected: $500";
                    totalcost = totalcost + 500.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                } else {
                    textlongest.style.display = "none";
                    totalcost = totalcost - 500.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                }
            }

            function cart() {
                if (golfcart.checked == true) {
                    textcart.style.display = "block";
                    textcart.style.color = "red";
                    totalcost = totalcost + 500.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                } else {
                    textcart.style.display = "none";
                    totalcost = totalcost - 500.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                }
            }

            function hole() {
                if (holesponsor.checked == true) {
                    texthole.style.display = "block";
                    texthole.style.color = "red";
                    totalcost = totalcost + 125.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                } else {
                    texthole.style.display = "none";
                    totalcost = totalcost - 125.00;
                    document.getElementById("myCost").innerHTML = totalcost;
                }
            }
